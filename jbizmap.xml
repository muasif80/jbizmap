			<language tag="ja-JP">ja-JP/ja-JP.com_jbizmap.ini</language>
			<language tag="it-IT">it-IT/it-IT.com_jbizmap.ini</language>
			<language tag="es-ES">es-ES/es-ES.com_jbizmap.ini</language>
		</languages>
		
	</administration>	
	
